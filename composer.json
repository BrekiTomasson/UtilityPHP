{
  "name": "brekitomasson/utility-php",
  "version": "2.0.0",
  "description": "Simple-to-use library to enable utility function calculations in PHP.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Breki Tomasson",
      "email": "breki.tomasson@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "BrekiTomasson\\UtilityPHP\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "beta",
  "require-dev": {
    "php": "^8.0",
    "pestphp/pest": "^2.0",
    "brekitomasson/php-cs-fixer-breki-config": "^1.1",
    "phpstan/phpstan": "^1.10"
  },
  "scripts": {
    "fix": "vendor/bin/php-cs-fixer fix --config ./.php-cs-fixer.php",
    "pest": "vendor/bin/pest --colors=always",
    "stan": "vendor/bin/phpstan analyse"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
